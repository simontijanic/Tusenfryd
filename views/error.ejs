<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar', { session: session }) %>
    <div class="container mt-5 text-center">
        <% if (messages && messages.error && messages.error.length > 0) { %>
            <div class="alert alert-danger">
                <% messages.error.forEach(function(msg) { %>
                    <div><%= msg %></div>
                <% }) %>
            </div>
        <% } %>
        <h1 class="display-4">En feil har oppst√•tt</h1>
        <p class="lead">Beklager, det oppstod en feil i systemet.</p>
        <% if (error) { %>
            <pre class="text-danger"><%= error.message %></pre>
        <% } %>
        <a href="/" class="btn btn-primary mt-3">Til forsiden</a>
    </div>
    <%- include('partials/footer') %>
</body>
</html>
